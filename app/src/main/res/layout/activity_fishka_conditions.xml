<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/materials_background"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/activity_fishka_conditions_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:elevation="@dimen/toolbar_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_fishka_conditions_toolbar_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingStart="@dimen/padding_default_double"
                android:paddingEnd="@dimen/padding_default_double"
                android:scaleType="centerInside"
                android:tint="@drawable/background_pressed_vector_drawable"
                app:srcCompat="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/activity_fishka_conditions_toolbar_title"
                style="@style/TextViewTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_default"
                android:ellipsize="end" />
        </LinearLayout>
    </FrameLayout>

    <WebView
        android:id="@+id/activity_fishka_conditions_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>