<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.bottomnavigation.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/rectangle">

    <LinearLayout
        android:id="@+id/navigation_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBgColor"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/navigation_app_bar_today"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_nb_today" />

                <include
                    android:id="@+id/today_badge"
                    layout="@layout/count_badge" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/today"
                android:textColor="@color/app_bar_icon_colors"
                android:textSize="@dimen/app_bar_title_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_app_bar_materials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_nb_materials" />

                <include
                    android:id="@+id/materials_badge"
                    layout="@layout/count_badge" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/materials"
                android:textColor="@color/app_bar_icon_colors"
                android:textSize="@dimen/app_bar_title_size" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/navigation_app_bar_prescriptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_nb_prescriptions" />

                <include
                    android:id="@+id/prescriptions_badge"
                    layout="@layout/count_badge" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/prescriptionz"
                android:textColor="@color/app_bar_icon_colors"
                android:textSize="@dimen/app_bar_title_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_app_bar_reference"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_nb_prescriptions" />

                <include
                    android:id="@+id/materials_badge"
                    layout="@layout/count_badge" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/reference_list"
                android:textColor="@color/app_bar_icon_colors"
                android:textSize="@dimen/app_bar_title_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/navigation_app_bar_calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_nb_calendar" />

                <include
                    android:id="@+id/visits_badge"
                    layout="@layout/count_badge" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/vistis"
                android:textColor="@color/app_bar_icon_colors"
                android:textSize="@dimen/app_bar_title_size" />
        </LinearLayout>



    </LinearLayout>
</com.google.android.material.bottomnavigation.BottomNavigationView>