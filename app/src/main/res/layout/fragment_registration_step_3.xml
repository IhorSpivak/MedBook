<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/fragment_registration_page_3_imv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="96dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_img_loginlogo" />

    <ProgressBar
        android:id="@+id/pb"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:indeterminateTint="@color/white"
        android:indeterminateTintMode="src_in"
        android:layout_below="@+id/fragment_registration_page_3_imv"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_registration_page_3_til_email"
        android:layout_width="match_parent"
        android:layout_marginTop="96dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fragment_registration_page_3_imv"
        android:theme="@style/TextInputLayoutAuth">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/fragment_registration_page_3_tiet_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registration_page_3_tiet_email_caption"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_registration_page_3_til_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default_half"
        android:layout_below="@+id/fragment_registration_page_3_til_email"
        android:theme="@style/TextInputLayoutAuth">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/fragment_registration_page_3_tiet_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registration_page_3_tiet_password_caption"
            android:inputType="textPassword"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_registration_page_3_til_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default_half"
        android:layout_below="@+id/fragment_registration_page_3_til_password"
        android:theme="@style/TextInputLayoutAuth">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/fragment_registration_page_3_tiet_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registration_page_3_tiet_password_confirm_caption"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/fragment_registration_page_3_btn_registration"
        style="@style/ButtonAuth"
        android:layout_width="219dp"
        android:layout_height="@dimen/btn_auth_h"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fragment_registration_page_3_til_password_confirm"
        android:text="@string/registration_page_3_btn_registration_caption" />

    <TextView
        android:id="@+id/fragment_registration_page_3_tv_prev"
        android:layout_width="@dimen/btn_auth_w"
        android:layout_below="@+id/fragment_registration_page_3_btn_registration"
        android:layout_height="@dimen/btn_auth_h"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/prev_caption"
        android:textColor="#80FFFFFF"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp" />
</RelativeLayout>