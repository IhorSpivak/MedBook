<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/activity_term_and_points_agreements_ok"
        style="@style/Button_type_1"
        android:layout_width="@dimen/btn_auth_w"
        android:layout_height="@dimen/btn_auth_h"
        android:layout_marginEnd="@dimen/margin_default_half"
        android:layout_marginBottom="@dimen/margin_default_half"
        android:text="@string/ok_terms_and_agreements"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/activity_term_and_points_agreements_cancel"
        style="@style/Button_type_1"
        android:layout_width="@dimen/btn_auth_w"
        android:layout_height="@dimen/btn_auth_h"
        android:layout_marginStart="@dimen/margin_default_half"
        android:layout_marginBottom="@dimen/margin_default_half"
        android:text="@string/btn_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_default"
        app:layout_constraintBottom_toTopOf="@+id/activity_term_and_points_agreements_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/activity_term_and_points_agreements_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_default" />

            <WebView
                android:id="@+id/activity_term_and_points_agreements_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_default" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/activity_term_and_points_agreements_progress"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:indeterminateDrawable="@drawable/progressbar"
        android:indeterminateOnly="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/activity_term_and_points_agreements_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>