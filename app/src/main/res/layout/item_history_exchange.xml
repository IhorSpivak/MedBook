<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_history_exchange_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_default">

    <ImageView
        android:padding="@dimen/padding_default"
        android:id="@+id/item_history_exchange_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_history_exchange_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_half"
            android:layout_marginEnd="@dimen/margin_default_half"
            android:ellipsize="end"
            android:lines="2"
            android:text=""
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_history_exchange_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_half"
            android:layout_marginEnd="@dimen/margin_default_half"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="#7A7E81"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_history_exchange_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default_half"
            android:layout_marginStart="@dimen/margin_default_half"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/margin_default"/>

        <View style="@style/Divider" />

    </LinearLayout>
</LinearLayout>