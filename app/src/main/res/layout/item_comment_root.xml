<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_default"
    android:layout_marginEnd="@dimen/margin_default"
    android:layout_marginTop="@dimen/margin_default_half"
    android:layout_marginBottom="@dimen/margin_default_half"
    android:padding="@dimen/padding_default"
    android:id="@+id/item_comment_root_root">

    <TextView
        android:id="@+id/item_comment_root_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:textAllCaps="true"
        android:background="@drawable/circle_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_comment_root_time"
        android:textSize="12sp"
        android:textColor="#989898"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_half"
        app:layout_constraintStart_toEndOf="@+id/item_comment_root_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="12sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:id="@+id/item_comment_root_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_half"
        app:layout_constraintStart_toEndOf="@+id/item_comment_root_icon"
        app:layout_constraintTop_toBottomOf="@+id/item_comment_root_time" />

    <TextView
        android:id="@+id/item_comment_root_content"
        android:layout_width="0dp"
        android:textColor="#030402"
        android:layout_height="wrap_content"

        android:textSize="14sp"
        android:layout_marginTop="@dimen/margin_default_half"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_comment_root_icon" />

    <TextView
        android:textAllCaps="true"
        android:id="@+id/item_comment_root_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9F9F9F"
        android:background="@drawable/drawable_comment_reply"
        android:layout_marginTop="@dimen/margin_default_half"
        android:padding="@dimen/padding_half"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_comment_root_content" />
</androidx.constraintlayout.widget.ConstraintLayout>