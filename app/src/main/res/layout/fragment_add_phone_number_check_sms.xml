<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_add_phone_number_check_sms_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:theme="@style/TextInputLayoutOnWhite"
        app:layout_constraintBottom_toTopOf="@+id/fragment_add_phone_number_check_sms_check_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/margin_default"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/fragment_add_phone_number_check_sms_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789+"
            android:imeOptions="actionGo"
            android:inputType="phone" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/fragment_add_phone_number_check_sms_check_btn"
        style="@style/Button_type_1"
        android:layout_width="@dimen/btn_auth_w_2"
        android:layout_height="@dimen/btn_auth_h"
        android:text=""
        android:layout_marginBottom="@dimen/margin_default"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/fragment_add_phone_number_check_sms_again_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_phone_number_check_sms_input_layout" />

    <Button
        android:id="@+id/fragment_add_phone_number_check_sms_again_btn"
        style="@style/Button_type_1"
        android:layout_width="@dimen/btn_auth_w_2"
        android:layout_height="@dimen/btn_auth_h"
        android:text=""
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_phone_number_check_sms_check_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>