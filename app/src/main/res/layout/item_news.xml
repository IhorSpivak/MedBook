<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_news_root"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="@dimen/margin_default">


    <ua.profarma.medbook.utils.round_image.RoundedImageView
        android:id="@+id/item_news_image"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_default"
        android:adjustViewBounds="true"
        app:siRadius="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_news_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:textColor="#989898"
        android:textSize="12sp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/item_news_title"
        app:layout_constraintStart_toEndOf="@+id/item_news_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_news_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default_half"
        android:ellipsize="end"
        android:maxLines="3"
        android:textSize="14sp"
        android:textColor="#030405"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_news_time"
        app:layout_constraintTop_toBottomOf="@+id/item_news_time" />

    <TextView
        android:id="@+id/item_news_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default_half"
        android:layout_marginBottom="8dp"
        android:paddingTop="@dimen/padding_half"
        android:paddingBottom="@dimen/padding_half"
        android:paddingStart="@dimen/padding_default"
        android:paddingEnd="@dimen/padding_default"
        app:layout_constraintBottom_toTopOf="@+id/item_news_time"
        app:layout_constraintStart_toEndOf="@+id/item_news_image"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>