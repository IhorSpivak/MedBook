<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingEnd="@dimen/padding_default_double"
    android:paddingStart="@dimen/padding_default_double"
    android:paddingTop="26dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default_and_half"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_default_double"
        android:paddingEnd="68dp"
        android:paddingStart="68dp"
        android:paddingTop="@dimen/padding_default_double"
        android:text="@string/close_dialog"
        android:textColor="@color/black"
        android:background="@drawable/stroke_rounded_gray_6"
        android:textSize="14sp" />
</LinearLayout>