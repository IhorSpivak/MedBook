<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_comment_child_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_default_triple"
    android:layout_marginTop="@dimen/margin_default_half"
    android:layout_marginEnd="@dimen/margin_default"
    android:layout_marginBottom="@dimen/margin_default_half"
    android:padding="@dimen/padding_default">

    <TextView
        android:id="@+id/item_comment_child_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/circle_blue"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_comment_child_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_half"
        android:textColor="#989898"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/item_comment_child_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_comment_child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_half"
        android:textColor="#333333"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_comment_child_icon"
        app:layout_constraintTop_toBottomOf="@+id/item_comment_child_time" />

    <TextView
        android:id="@+id/item_comment_child_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/margin_default_half"
        android:textColor="#030402"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_comment_child_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>