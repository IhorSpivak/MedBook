<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ua.profarma.medbook.recyclerviews.news.NewsRecyclerView
        android:id="@+id/fragment_clinical_cases_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  />

    <LinearLayout
        android:id="@+id/fragment_clinical_cases_btn_ll"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_clinical_cases_list"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_clinical_cases_btn_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default"
            android:layout_weight="1"
            android:background="@drawable/button_type_4"
            android:textColor="#333333"
            android:textSize="14sp" />

        <Button
            android:id="@+id/fragment_clinical_cases_btn_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default"
            android:layout_weight="1"
            android:background="@drawable/button_type_4"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>