<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/materials_background"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_marginEnd="8dp"
        android:elevation="@dimen/toolbar_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_main_departments_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingStart="@dimen/padding_default_double"
                android:paddingEnd="@dimen/padding_default_double"
                android:scaleType="centerInside"

                app:srcCompat="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/activity_main_departments_title"
                style="@style/TextViewTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="496dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rectangle_rounded_10_all">


            <RelativeLayout

                android:id="@+id/activity_main_departments_compedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="85dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="135dp"
                    android:layout_height="73dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/compedium"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPEDIUM"
                    android:layout_marginTop="39dp"
                    android:layout_below="@+id/imageView9"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ABB1BF" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_main_departments_geoapteka"
                android:layout_width="wrap_content"
                android:layout_marginTop="85dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
           >

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="135dp"
                    android:layout_height="73dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/geoapteka" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="39dp"
                    android:layout_below="@+id/imageView10"
                    android:text="GEOAPTEKA"
                    android:textColor="#ABB1BF"
                    android:textSize="12sp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/activity_main_departments_mdwworld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="29dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="135dp"
                    android:layout_height="73dp"
                    android:id="@+id/iv_MDM"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="80dp"
                    android:layout_centerHorizontal="true"

                    android:src="@mipmap/mdwworld" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ABB1BF"
                    android:layout_below="@+id/iv_MDM"
                    android:text="MDMWORLD"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_main_departments_umch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@color/white"
                >

                <ImageView
                    android:layout_width="135dp"
                    android:layout_height="73dp"
                    android:id="@+id/iv_chasopis"
                    android:layout_marginBottom="80dp"
                    android:src="@mipmap/umch" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ABB1BF"
                    android:layout_below="@+id/iv_chasopis"
                    android:text="УМЧ"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp" />
            </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/color_tab_unselect"
            >

        </View>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/color_tab_unselect"
            >

        </View>
        </RelativeLayout>




</RelativeLayout>