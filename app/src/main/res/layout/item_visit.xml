<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_visit_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_visit_height">

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_default"
        android:background="@color/separatorGray"
        app:layout_constraintBottom_toBottomOf="@+id/item_visit_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_visit_status" />

    <ImageView
        android:id="@+id/item_visit_dot"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_visit_status"
        app:srcCompat="@drawable/circle_visit_new" />

    <TextView
        android:id="@+id/item_visit_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_double"
        android:layout_marginEnd="@dimen/margin_default"
        android:ellipsize="end"
        android:lines="1"
        android:paddingTop="@dimen/padding_default"
        android:textAllCaps="true"
        android:textColor="#333333"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_visit_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_visit_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_double"
        android:layout_marginEnd="@dimen/margin_default"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#333333"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_visit_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_visit_status" />

    <TextView
        android:id="@+id/item_visit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_double"
        android:layout_marginEnd="@dimen/margin_default"
        android:ellipsize="end"
        android:lines="1"
        android:text="NONE"
        android:textColor="#030402"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_visit_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_visit_time" />

    <TextView
        android:id="@+id/item_visit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_double"
        android:layout_marginEnd="@dimen/margin_default"
        android:ellipsize="end"
        android:lines="1"
        android:paddingBottom="@dimen/padding_default"
        android:textColor="#989898"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_visit_name" />

</androidx.constraintlayout.widget.ConstraintLayout>