<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/materials_background">

    <FrameLayout
        android:id="@+id/activity_tests_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:elevation="@dimen/toolbar_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_tests_toolbar_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingStart="@dimen/padding_default_double"
                android:paddingEnd="@dimen/padding_default_double"
                android:scaleType="centerInside"
                android:tint="@drawable/background_pressed_vector_drawable"
                app:srcCompat="@drawable/ic_arrow_back"  />

            <TextView
                android:id="@+id/activity_tests_toolbar_title"
                style="@style/TextViewTitleStyle"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/margin_default"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/activity_test_help_ll"
        android:id="@+id/activity_tests_content"
        android:background="@drawable/rectangle_rounded_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_tests_toolbar">

        <LinearLayout
            android:id="@+id/ll_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:gravity="center_horizontal"
                android:textColor="@color/gray_1"
                android:textSize="14sp"
                android:layout_margin="@dimen/margin_default"
                android:id="@+id/activity_tests_progress_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <ProgressBar
                android:id="@+id/activity_tests_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:progress="0" />

        </LinearLayout>

        <Button
            android:id="@+id/activity_tests_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_half"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:background="@drawable/button_type_2"
            android:elevation="6dp"
            android:text="Button"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/activity_tests_prev" />

        <Button
            android:id="@+id/activity_tests_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default_half"
            android:layout_marginBottom="@dimen/margin_default"
            android:background="@drawable/button_type_3"
            android:elevation="6dp"
            android:text="Button"
            android:textColor="#363636"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/activity_tests_next"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <ua.profarma.medbook.ui.custom_views.NonSwipeableViewPager
            android:id="@+id/activity_tests_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_default"
            app:layout_constraintBottom_toTopOf="@+id/activity_tests_prev"
            app:layout_constraintTop_toBottomOf="@+id/ll_progress" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/activity_test_help_ll"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_tests_content"
        >
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>