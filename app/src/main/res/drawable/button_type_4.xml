<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <stroke android:width="2dp" android:color="@color/color_button_type_4_disable" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <stroke android:width="2dp" android:color="@color/color_button_type_4_pressed" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <stroke android:width="2dp" android:color="@color/color_button_type_4" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</selector>